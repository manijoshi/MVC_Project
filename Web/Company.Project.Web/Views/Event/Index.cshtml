@model IEnumerable<Company.Project.Web.Models.EventViewModel>
@{
    ViewData["Title"] = "All Events";
}

<div>
    <h1 class="display-4 mt-4" style="color: rgb(63,214,172);font-weight:bold">All Events</h1>
</div>


@if (Model.Count() == 0)
{
    <h3 class="p-3 text-white" style="background-color:khaki">No Information</h3>
}
else
{

    <div class="container mt-5">
        <div class="row ">
            <div class="col-6">
                <h3 class="border p-2" style="display:inline-block">Passed Events</h3>
                <div class="card-deck">
                    <ul style="list-style-type:circle;">
                        @foreach (var evt in Model)
                        {

                            @if (evt.Date < DateTime.Now)
                            {

                                <li style="width:100%;text-decoration:underline;font-size:24px">
                                    <a asp-controller="Event" asp-action="EventDetails" asp-route-Id="@evt.Id">@evt.Title</a>
                                </li>
                            }

                        }
                    </ul>
                </div>
            </div>
            <div class="col-6">
                <h3 class="border p-2" style="display:inline-block">Upcoming Events</h3>
                <div class="card-deck">
                    <ul style="list-style-type:circle;">
                        @foreach (var evt in Model)
                        {
                            @if (evt.Date > DateTime.Now)
                            {
                                <li style="width: 100%; text-decoration: underline; font-size: 24px">
                                    <a asp-controller="Event" asp-action="EventDetails" asp-route-Id="@evt.Id">@evt.Title</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
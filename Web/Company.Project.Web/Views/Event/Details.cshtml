@model IEnumerable<Company.Project.Web.Models.EventViewModel>
@{
    ViewData["Title"] = "All Events";
}

<div class="">
    <h1 class="display-4 mt-4" style="color: rgb(63,214,172); font-weight: 500 ">My Events</h1>
</div>
<div class="container mt-4">
    @if (Model.Count() == 0)
    {
        <h3 class="p-3 text-white" style="background-color:khaki">No Information</h3>
    }
</div>
    
<div class="card-deck h-100">
    @foreach (var evt in Model)
    {
        <div class="card m-3" style="min-width:18rem;max-width:30.5%;">
            <div class="card-header h-100">
                <h1 class="text-center">@evt.Title</h1>
            </div>
            <div class="card-footer text-center mb-0">
                <a asp-controller="Event" asp-action="EventDetails" asp-route-Id="@evt.Id" class="btn btn-info">View</a>
                @if (User.IsInRole("Administrator") || evt.UserId == User.Identity.Name)
                {
                    <a asp-controller="Event" asp-action="EditEvent" asp-route-Id="@evt.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Event" asp-action="Delete" asp-route-Id="@evt.Id" class="btn btn-danger">Delete</a>
                }
            </div>
        </div>
    }
</div>

